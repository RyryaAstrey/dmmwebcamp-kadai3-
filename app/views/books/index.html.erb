<div class="container px-5 px-sm-0">
    <div class="row">
        <%=render 'books/user_info', user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table">
              <tbody>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= image_tag @user.get_profile_image(100,100) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <%end%>
          </table>
      </div>
    </div>
</div>