<div class="container px-5 px-sm-0">
    <div class="row">
        <%=render 'user_info', user: @user %>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                      <td>
                        <%= image_tag @user.get_profile_image(100,100) %><br>
                        <%= link_to @user.name, user_path(current_user.id) %></td>
                      <td><%= link_to @user.books.title, book_path(book.id) %></td>
                      <td><%= @user.books.body %></td>
                      <td><a class="btn btn-success btn-sm" href="/books/:id/edit">Edit</a></td>
                      <% if @book_i.user == current_user %>
                      <td><%= link_to "Destroy", "/books/:id", method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に消しますか？" %></td>
                      <%end%>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>