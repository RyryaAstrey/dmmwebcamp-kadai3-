<div class="container px-5 px-sm-0">
    <div class="row">
        <%=render 'user_info', user: @user %>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                      <td>
                        <%= image_tag @user.get_profile_image(100,100) %><br>
                        <%= link_to @book_i.user.name, user_path %></td>
                      <td><%= link_to @book_i.title, book_path(@book_i.id) %></td>
                      <td><%= @book_i.body %></td>
                      <% if @book_i.user == current_user %>
                      <td><%= link_to "Edit", edit_book_path, class: "btn btn-success btn-sm" %></td>
                      <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に消しますか？" %></td>
                      <%end%>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>