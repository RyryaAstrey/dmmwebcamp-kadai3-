<div class="col-md-3">
  <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
         <tr>
           <th>name</th>
           <th><%= user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
      </tbody>
    </table>
    <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit"><i class="fas fa-user-cog"></i></a>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book do |f| %>
    <div class="form-group">
      <p>Title</p>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <p>Opinion</p>
        <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit 'Create Book', class: "btn-sm btn-success" %>
    <%end%>
</div>