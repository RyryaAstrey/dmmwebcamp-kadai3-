<div class="container px-5 px-sm-0">
    <div class="row">
        <%=render 'books/user_info', user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table">
              <tbody>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th></th>
                </tr>
              </tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "show", user_path(user.id) %></td>
              </tr>
              <%end%>
          </table>
      </div>
    </div>
</div>